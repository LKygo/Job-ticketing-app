<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TechnicianDashboard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cnsConstraintT2"
        android:layout_width="match_parent"
        android:background="#0A673AB7"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/green_circle"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txvHello"
        android:text="Welcome back "
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Leeroy Kigo"
        android:textStyle="bold"
        android:layout_marginHorizontal="6dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="#E8000000"
        app:layout_constraintTop_toBottomOf="@id/txvHello"
        app:layout_constraintStart_toEndOf="@+id/imgProfile"/>

    <EditText
        android:id="@+id/edtSearchBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint=" Search job here"
        android:drawableLeft="@drawable/baseline_search_24"
        android:background="@drawable/edit_text2"
        app:layout_constraintTop_toBottomOf="@+id/txvName"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dvdDivider"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/edtSearchBox"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txvUrgencyHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgency:"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnsConstraintT2"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/crcYellow"
        android:src="@drawable/yellow_circle"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/txvUrgencyHelp"
        app:layout_constraintTop_toTopOf="@+id/txvUrgencyHelp"
        app:layout_constraintBottom_toBottomOf="@+id/txvUrgencyHelp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvModUrgent"
        android:text="Moderatley Urgent"
        android:layout_marginStart="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txvUrgencyHelp"
        app:layout_constraintStart_toEndOf="@+id/crcYellow"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/crcOrange"
        android:src="@drawable/orange_circle"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/txvModUrgent"
        app:layout_constraintTop_toTopOf="@+id/txvUrgencyHelp"
        app:layout_constraintBottom_toBottomOf="@+id/txvUrgencyHelp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgent"
        android:id="@+id/txvUrgent"
        android:layout_marginStart="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txvUrgencyHelp"
        app:layout_constraintStart_toEndOf="@+id/crcOrange"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/crcRed"
        android:src="@drawable/red_circle"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/txvUrgent"
        app:layout_constraintTop_toTopOf="@+id/txvUrgencyHelp"
        app:layout_constraintBottom_toBottomOf="@+id/txvUrgencyHelp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V. Urgent"
        android:layout_marginStart="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txvUrgencyHelp"
        app:layout_constraintStart_toEndOf="@+id/crcRed"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="200dp"
        app:layout_constraintTop_toBottomOf="@+id/txvUrgencyHelp"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

<!--<com.google.android.material.divider.MaterialDivider-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="wrap_content"-->
<!--    android:layout_marginTop="84dp"-->
<!--    app:layout_constraintTop_toBottomOf="@id/rcvRecyclerView"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>